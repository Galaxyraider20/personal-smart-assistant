# myAssist Calendar Agent - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# API CONFIGURATION
# =============================================================================

# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8000

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database URL (if using local storage)
DATABASE_URL=sqlite:///./myassist.db

# =============================================================================
# GOOGLE CALENDAR MCP INTEGRATION
# =============================================================================

# Google OAuth 2.0 credentials
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# MCP server configuration
MCP_SERVER_URL=http://localhost:8080
MCP_SERVER_PATH=/mcp/calendar

# =============================================================================
# SUPERMEMORY INTEGRATION
# =============================================================================

# Supermemory API credentials
# Sign up at: https://supermemory.ai/
SUPERMEMORY_API_KEY=your_supermemory_api_key_here
SUPERMEMORY_API_URL=https://api.supermemory.ai
SUPERMEMORY_USER_ID=your_user_id_here
SUPERMEMORY_SPACE=myassist_calendar

# =============================================================================
# AGENT COMMUNICATION SETTINGS
# =============================================================================

# Agent identification
AGENT_ID=myassist_calendar_001
AGENT_NAME="myAssist Calendar Agent"

# Communication ports
AGENT_DISCOVERY_PORT=9001
AGENT_COMM_PORT=9002

# Agent registry
AGENT_REGISTRY_URL=https://agent-registry.myassist.com
AGENT_AUTH_SECRET=your_agent_auth_secret_here_min_32_chars

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# JWT signing secret (generate a secure random string)
JWT_SECRET_KEY=your_jwt_secret_key_here_min_32_chars

# Session security
SESSION_SECRET_KEY=your_session_secret_key_here_min_32_chars

# Encryption keys
ENCRYPTION_KEY=your_encryption_key_here_32_chars

# =============================================================================
# OPTIONAL: REDIS CONFIGURATION (for caching)
# =============================================================================

# Redis connection (optional, for conversation caching)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# OPTIONAL: DATABASE CONFIGURATION (for persistent storage)
# =============================================================================

# PostgreSQL (recommended for production)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=myassist
# POSTGRES_USER=myassist_user
# POSTGRES_PASSWORD=secure_password

# =============================================================================
# OPTIONAL: MONITORING AND LOGGING
# =============================================================================

# Sentry (error tracking)
SENTRY_DSN=

# Log file paths
LOG_FILE_PATH=logs/myassist.log
ERROR_LOG_PATH=logs/errors.log

# Metrics and monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# OPTIONAL: DEVELOPMENT SETTINGS
# =============================================================================

# Development-specific settings
DEV_RELOAD=true
DEV_MOCK_EXTERNAL_SERVICES=false

# Test environment settings
TEST_DATABASE_URL=sqlite:///./test_myassist.db
TEST_GOOGLE_CLIENT_ID=test_client_id
TEST_SUPERMEMORY_API_KEY=test_api_key

# =============================================================================
# OPTIONAL: ADVANCED CONFIGURATION
# =============================================================================

# Request timeouts (seconds)
HTTP_TIMEOUT=30
MCP_TIMEOUT=60
AGENT_RESPONSE_TIMEOUT=300

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Memory management
MAX_CONVERSATION_HISTORY=100
MEMORY_CLEANUP_INTERVAL=3600

# Scheduling intelligence settings
SCHEDULING_LOOKAHEAD_DAYS=30
MAX_SCHEDULING_SUGGESTIONS=10
CONFLICT_RESOLUTION_TIMEOUT=300

# Agent communication settings
MAX_CONCURRENT_AGENT_CONNECTIONS=50
AGENT_HEARTBEAT_INTERVAL=30
AGENT_CONNECTION_TIMEOUT=120

# =============================================================================
# TIMEZONE CONFIGURATION
# =============================================================================

# Default timezone for the agent
DEFAULT_TIMEZONE=UTC

# Business hours (24-hour format)
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=17:00

# Default meeting duration (minutes)
DEFAULT_MEETING_DURATION=60
